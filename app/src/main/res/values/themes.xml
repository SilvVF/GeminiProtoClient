<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.GemClient" parent="android:Theme.Material.Light.NoActionBar" />

    <!-- Allows us to override night specific attributes in the
       values-night folder. -->
    <style name="NightAdjusted.Theme.GemClient" parent="android:Theme.Material.Light.NoActionBar" />


    <style name="NightAdjusted.Theme.Splash" parent="Theme.SplashScreen">
        <item name="android:windowLightStatusBar" >true</item>
        <item name="android:windowLightNavigationBar">true</item>
    </style>

    <style name="Theme.GemClient.Splash" parent="NightAdjusted.Theme.Splash">
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_launcher_foreground</item>
        <item name="postSplashScreenTheme">@style/Theme.GemClient</item>
    </style>
</resources>